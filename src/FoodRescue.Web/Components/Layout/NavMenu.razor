@using Microsoft.AspNetCore.Components.Authorization
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FoodRescue</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                @if (featureFlags?.Value.AuthDebugVisible == true)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="auth-debug">
                            <span class="bi bi-bug-fill" aria-hidden="true"></span> Auth Debug
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Developer">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="food-recognizer">
                        <span class="bi bi-camera-fill-nav-menu" aria-hidden="true"></span> Food Recognizer
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="food-recognitions">
                        <span class="bi bi-camera-fill-nav-menu" aria-hidden="true"></span> Food Recognitions
                </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    [Microsoft.AspNetCore.Components.Inject]
    private Microsoft.Extensions.Options.IOptions<FoodRescue.Web.Configuration.FeatureFlags>? featureFlags { get; set; }
}

